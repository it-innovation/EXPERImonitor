<?xml version="1.0" encoding="UTF-8"?>
<web-app id="restlet-basecamp" version="2.4"
         xmlns="http://java.sun.com/xml/ns/j2ee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/j2ee http://java.sun.com/xml/ns/j2ee/web-app_2_4.xsd">
    <display-name>WeGov Prototype</display-name>
    <listener>
        <listener-class>org.springframework.web.context.ContextLoaderListener</listener-class>
    </listener>
    <listener>
        <listener-class>eu.wegov.context.WegovContextLoaderListener</listener-class>
    </listener>

    <context-param>
        <param-name>org.restlet.component</param-name>
        <param-value>wegovComponent</param-value>
    </context-param>
    <context-param>
        <param-name>contextConfigLocation</param-name>
        <param-value>
            WEB-INF/springContext.xml
            WEB-INF/applicationContext.xml
        </param-value>
    </context-param>       

    <filter>
        <filter-name>springSecurityFilterChain</filter-name>
        <filter-class>org.springframework.web.filter.DelegatingFilterProxy</filter-class>
    </filter>
	
    <filter>
        <filter-name>optionsHeaders</filter-name>
        <filter-class>eu.wegov.web.filters.OptionsHeadersFilter</filter-class>
    </filter>	

    <filter-mapping>
        <filter-name>springSecurityFilterChain</filter-name>
        <url-pattern>/home/*</url-pattern>
    </filter-mapping>

    <filter-mapping>
        <filter-name>springSecurityFilterChain</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
	
    <filter-mapping>
        <filter-name>optionsHeaders</filter-name>
        <url-pattern>/home/**</url-pattern>
    </filter-mapping>	

    <servlet>
        <servlet-name>wegov</servlet-name>
        <servlet-class>org.springframework.web.servlet.DispatcherServlet</servlet-class>
        <load-on-startup>1</load-on-startup>
    </servlet>

    <servlet-mapping>
        <servlet-name>wegov</servlet-name>
        <url-pattern>*.html</url-pattern>
    </servlet-mapping>

    <servlet-mapping>
        <servlet-name>wegov</servlet-name>
        <url-pattern>*.json</url-pattern>
    </servlet-mapping>

    <welcome-file-list>
        <welcome-file>login.html</welcome-file>
    </welcome-file-list>
</web-app>

